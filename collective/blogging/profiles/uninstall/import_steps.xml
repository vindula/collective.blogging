<?xml version="1.0"?>
<import-steps>

    <import-step id="collective.blogging.reset-catalog"
        version="20091206-01"
        handler="collective.blogging.setuphandlers.resetCatalog"
        title="Remove blogging related indexes and metadata.">
        Removes blogging related indexes and metadata from the portal catalog.
    </import-step>
    
    <import-step id="collective.blogging.reset-views"
        version="20091206-01"
        handler="collective.blogging.setuphandlers.resetViews"
        title="Remove blogging related supplied views settings.">
        Removes blogging related supplied views from the portal types.
    </import-step>
    
    <import-step id="collective.blogging.reset-layers"
        version="20091206-01"
        handler="collective.blogging.setuphandlers.resetLayers"
        title="Remove blogging related browser layer.">
        Removes blogging related browser layer.
    </import-step>
    
    <import-step id="collective.blogging.reset-roles"
        version="20091206-01"
        handler="collective.blogging.setuphandlers.resetRoles"
        title="Remove blogging related roles.">
        Removes blogging related roles.
    </import-step>

</import-steps>